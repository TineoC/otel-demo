{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.2/.schema/devbox.schema.json",
  "packages": [
    "nodejs@24",
    "kind@latest",
    "kubectl@latest",
    "helm@latest",
    "tilt@latest"
  ],
  "env": {
    "VITE_OTEL_EXPORTER_OTLP_ENDPOINT": "http://localhost:55681/v1/traces"
  },
  "shell": {
    "init_hook": [
      "# bootstrap everything: cluster + argocd + operator",
      "bash devbox-scripts/init.sh"
    ],
    "scripts": {
      "init":   "bash devbox-scripts/init.sh",
      "deploy": "kubectl apply -f ./deploy/argocd"
    }
  }
}
